    "cypress-iframe": "^1.0.1",
    "cypress-multi-reporters": "^1.4.0",
    "cypress-tags": "^0.0.20",
    "cypress-xpath": "^1.6.1",
    "debug": "^3.2.0",
    "eslint": "^7.6.0",
    "eslint-plugin-cypress": "^2.11.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.5.3",
    "marge": "^1.0.1",
    "mocha": ">=7",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.1.0",
    "mochawesome-report-generator": "^4.1.0",
    "prettier": "^2.0.5",
    "ts-loader": "^8.0.6",
    "webpack": "^4.18.1"
  },
  "dependencies": {
    "@eclipse/che-che4z": "https://github.com/eclipse/che-che4z.git",
    "cypress": "^7.1.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "lint": "eslint . ",
    "cy:run": "npm run clean:reports && cross-env CYPRESS_EXCLUDE_TAGS=flaky,flaky_theia,bug,investigation cypress run --reporter mochawesome",
    "cy:run:all": "npm run cy:run -- --spec './cypress/integration/LSP/*' -b chrome",
    "cy:run:all:headless": "npm run cy:run:all  -- --headless",
    "cy:open": "cypress open",
    "cy:run:all:headless:smoke": "cross-env CYPRESS_INCLUDE_TAGS=smoke npm run cy:run:all:headless --",
    "ts:build": "tsc --build ./node_modules/@eclipse/che-che4z/tests/tsconfig.json",
    "clean:reports": "rm -rf cypress/reports/",
    "merge:reports": "mochawesome-merge cypress/reports/mochawesome*.json > cypress-tests-report.json",
    "create:html:report": "marge --reportDir cypress/reports/final_report cypress-tests-report.json",
    "generate:html:report": "npm run merge:reports && npm run create:html:report"
  }
}
